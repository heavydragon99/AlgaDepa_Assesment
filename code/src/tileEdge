#include "tileEdge.h"

tileEdge::tileEdge(tileNode* aFrom, tileNode* aTo, float aWeight) : mFrom(aFrom), mTo(aTo), mWeight(aWeight) {}

tileNode* tileEdge::getOtherSide(tileNode* aNode) const
{
    if (aNode == mFrom)
    {
        return mTo;
    }
    if (aNode == mTo)
    {
        return mFrom;
    }
    return nullptr; // or throw an exception if the node is not part of the edge
}

float tileEdge::getWeight() const { return mWeight; }